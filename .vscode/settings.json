{
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": ["Kubernetes", "MONGODB", "Parens", "inversify", "uuidv"],

  "LineCount.includes": ["**/*.ts", "**/*.tsx", "**/*.tf"],

  "workbench.colorCustomizations": {
    "activityBar.background": "#000307",
    "activityBar.foreground": "#fff",
    "statusBar.background": "#020c1a",
    "statusBar.foreground": "#fff"
  },

  "prettier.singleQuote": true,
  "prettier.bracketSpacing": false,
  "prettier.semi": false,
  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 100,

  "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.importStringConfiguration.hasSemicolon": false,
  "importSorter.importStringConfiguration.spacingPerImportExpression.afterStartingBracket": 0,
  "importSorter.importStringConfiguration.spacingPerImportExpression.beforeEndingBracket": 0,
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.type": "newLineEachExpressionAfterCountLimitExceptIfOnlyOne",
  "importSorter.importStringConfiguration.tabSize": 2,
  "importSorter.importStringConfiguration.trailingComma": "multiLine",
  "importSorter.sortConfiguration.removeUnusedImports": true,
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    {
      "type": "importMember",
      "regex": "^$",
      "orderLevel": 10,
      "disableSort": true
    },
    {"regex": "^(@shared)", "orderLevel": 30},
    {"regex": "^[.]", "orderLevel": 50}
  ]
}
